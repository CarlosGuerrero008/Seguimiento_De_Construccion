rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funci칩n helper para verificar si el usuario pertenece a un proyecto
    function isProjectMember(projectId) {
      return exists(/databases/$(database)/documents/projectUsers/$(request.auth.uid)) ||
             get(/databases/$(database)/documents/projects/$(projectId)).data.adminId == request.auth.uid;
    }
    
    // Regla para im치genes de perfil de usuario
    match /user_images/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regla para colecci칩n de usuarios
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regla para proyectos - SIMPLIFICADA
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                               resource.data.adminId == request.auth.uid;
    }
    
    // Regla para relaci칩n usuarios-proyectos
    match /projectUsers/{userProjectId} {
      allow read, write: if request.auth != null;
    }
    
    // Regla para invitaciones
    match /invitations/{invitationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Regla para secciones de proyecto - SIMPLIFICADA
    match /projectSections/{sectionId} {
      allow read, write: if request.auth != null;
    }
    
    // Regla para reportes diarios - SIMPLIFICADA
    match /dailyReports/{reportId} {
      allow read, write: if request.auth != null;
    }
    
    // Regla para documentos del proyecto - SIMPLIFICADA
    match /projectDocuments/{documentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                       request.resource.data.fileSize <= 5242880;
      allow update: if request.auth != null && 
                       resource.data.uploadedBy == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.uploadedBy == request.auth.uid;
    }
    
    // Regla para materiales de secciones - SIMPLIFICADA
    match /sectionMaterials/{materialId} {
      allow read, write: if request.auth != null;
    }
  }
}